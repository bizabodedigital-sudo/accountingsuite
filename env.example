# ============================================
# Bizabode Accounting Suite - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# Database Configuration (REQUIRED)
# ============================================
MONGODB_URI=mongodb://mongo:27017/bizabode
# For MongoDB with authentication:
# MONGODB_URI=mongodb://username:password@mongo:27017/bizabode?authSource=admin

REDIS_URL=redis://redis:6379
# For Redis with authentication:
# REDIS_URL=redis://:password@redis:6379

# MongoDB Root Credentials (Optional - for MongoDB admin access)
MONGO_ROOT_USERNAME=
MONGO_ROOT_PASSWORD=

# MongoDB Database Name
MONGO_DATABASE=bizabode

# ============================================
# JWT Configuration (REQUIRED)
# ============================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-CHANGE-THIS
JWT_EXPIRES_IN=24h

# ============================================
# Server Configuration (REQUIRED)
# ============================================
NODE_ENV=production
PORT=3001
BACKEND_PORT=3001

# Frontend URL - MUST be set in production (no trailing slash)
FRONTEND_URL=https://your-frontend-domain.com

# ============================================
# Frontend Environment Variables (REQUIRED)
# ============================================
NEXT_PUBLIC_API_URL=https://your-backend-domain.com
NEXT_PUBLIC_APP_URL=https://your-frontend-domain.com

# ============================================
# Storage Configuration (S3/MinIO)
# ============================================
# For MinIO (default in docker-compose):
S3_ENDPOINT=http://minio:9000
S3_BUCKET=bizabode-accounting
S3_ACCESS_KEY=your-minio-access-key
S3_SECRET_KEY=your-minio-secret-key
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# For AWS S3:
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_REGION=us-east-1
# S3_FORCE_PATH_STYLE=false

# For DigitalOcean Spaces:
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
# S3_BUCKET=your-space-name
# S3_ACCESS_KEY=your-spaces-key
# S3_SECRET_KEY=your-spaces-secret
# S3_REGION=nyc3
# S3_FORCE_PATH_STYLE=false

# MinIO Root Credentials (if using MinIO)
MINIO_ROOT_USER=your-minio-root-user
MINIO_ROOT_PASSWORD=your-minio-root-password
MINIO_BUCKET=bizabode-accounting

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================
# Mongo Express (Optional - Database Admin UI)
# ============================================
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=your-secure-password

# ============================================
# Development Only (Do NOT use in production)
# ============================================
# NEXT_PUBLIC_DEBUG=false
